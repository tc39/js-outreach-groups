{
  "name": "tools-compat-suite",
  "private": true,
  "type": "module",
  "scripts": {
    "check-compat-data": "node ./test-runner/main.ts 'tests/**/*.test.js' '--platform=*'",
    "update-compat-data": "node ./test-runner/main.ts 'tests/**/*.test.js' '--platform=*' --update",
    "fix": "prettier --write .",
    "test": "tsc && prettier --check . && vitest"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^28.0.1",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^15.3.0",
    "@rollup/plugin-replace": "^6.0.1",
    "@types/semver": "^7.5.8",
    "@vitest/expect": "^2.1.4",
    "chai": "^5.1.2",
    "expect": "^29.7.0",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "playwright": "^1.48.2",
    "prettier": "^3.3.3",
    "rollup": "^4.25.0",
    "semver": "^7.6.3",
    "typescript": "^5.6.3",
    "vitest": "^2.1.4"
  },
  "imports": {
    "#glob": {
      "bun": "./test-runner/glob.bun.ts",
      "default": "./test-runner/glob.node.ts"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,css,json,md,ts,tsx}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "gray-matter": "^4.0.3"
  }
}
